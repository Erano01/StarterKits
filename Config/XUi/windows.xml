<configs>
    <append xpath="/windows">
        <!-- Styles dosyasını dahil et -->
        <include path="styles.xml" />

        <!-- Menü penceremiz-->
        <!-- CenterCenter bile desek merkezi merkez nokta alıp sağ altta oluşturuyor default-->
        <!-- O yüzden pos(x,y) ile konumu düzeltiyoruz -->
        <window name="starterKitWindow"
            controller="StarterKits.XUiC_KitSelectionMenu, StarterKits"
            is_modal="true"
            allow_escape="false"
            anchor="CenterCenter"
            pos="-600,430"
            width="1200"
            height="800"
            cursor_area="true">

            <panel name="rootPanel">
                <!-- Header -->
                <panel name="header" pos="0,0" width="1200" height="45" depth="1"
                backgroundcolor="[black]">
                    <label depth="2" pos="490,-6" font_size="32" color="[white]"
                        text="Choose Your Starter Kit"/>
                </panel>

                <grid name="kitOpitons" pos="0,0" top_pad="45"
                    rows="2" cols="2">

                    <panel name="Builder">

                    </panel>

                    <panel name="Archer">
                        
                    </panel>
                    
                    
                    
                    <panel name="Tyson">
                        
                    </panel>
                    
                    <panel name="Spearman">

                    </panel>

                </grid>
            </panel>
        </window>

    </append>

    <!-- ESC menüsüne starter kit butonu ekle -->
    <append xpath="//window[@name='ingameMenu']//grid[@name='buttons']">
        <simplebutton name="btnStarterKit" depth="3" width="250" height="46"
            caption_key="Starter Kit" font_size="40" />
    </append>
</configs>