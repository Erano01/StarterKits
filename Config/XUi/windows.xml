<configs>
    <append xpath="/windows">
        <window name="starterKitWindow"
                controller="StarterKits.XUiC_KitSelectionMenu"
                is_modal="true"
                allow_escape="false"
                pauses_game="true">
            <panel name="root" pos="0,0" width="100%" height="100%">
                <label name="title" text="Choose your starter kit!" />
                <button name="kit1" text="Kit 1" event_onclick="eventChooseKit(kit1)" />
                <button name="kit2" text="Kit 2" event_onclick="eventChooseKit(kit2)" />
                <button name="kit3" text="Kit 3" event_onclick="eventChooseKit(kit3)" />
            </panel>
        </window>
    </append>
</configs>